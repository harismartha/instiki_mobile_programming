<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_normal"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Foto Bersama"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/font_size_medium"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="@dimen/margin_long"
        android:src="@drawable/kelompok"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/profil"
        android:textColor="@color/black"
        android:textSize="@dimen/font_size_large"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/linear_lay_anggota_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="vertical"
        android:paddingTop="@dimen/padding_small"
        android:paddingBottom="@dimen/padding_small">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_anggota_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            app:cardCornerRadius="@dimen/corner_normal"
            app:cardUseCompatPadding="false"
            app:strokeColor="@color/blue_dark"
            app:strokeWidth="@dimen/stroke_light">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_medium"
                android:orientation="vertical"
                android:paddingLeft="@dimen/padding_long">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_smallest"
                    android:text="@string/nama_anggota_1"
                    android:textColor="@color/blue_dark"
                    android:textSize="@dimen/font_size_medium"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_smallest"
                    android:text="@string/nim_anggota_1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_medium"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_lay_anggota_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="vertical"
        android:paddingTop="@dimen/padding_small"
        android:paddingBottom="@dimen/padding_small">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_anggota_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            app:cardCornerRadius="@dimen/corner_normal"
            app:cardUseCompatPadding="false"
            app:strokeColor="@color/blue_dark"
            app:strokeWidth="@dimen/stroke_light">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_medium"
                android:orientation="vertical"
                android:paddingLeft="@dimen/padding_long">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_smallest"
                    android:text="@string/nama_anggota_2"
                    android:textColor="@color/blue_dark"
                    android:textSize="@dimen/font_size_medium"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_smallest"
                    android:text="@string/nim_anggota_2"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_medium" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_lay_anggota_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="vertical"
        android:paddingTop="@dimen/padding_small"
        android:paddingBottom="@dimen/padding_small">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_anggota_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:clipToPadding="false"
            app:cardCornerRadius="@dimen/corner_normal"
            app:cardUseCompatPadding="false"
            app:strokeColor="@color/blue_dark"
            app:strokeWidth="@dimen/stroke_light">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_medium"
                android:orientation="vertical"
                android:paddingLeft="@dimen/padding_long">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_smallest"
                    android:text="@string/nama_anggota_3"
                    android:textColor="@color/blue_dark"
                    android:textColorHighlight="@color/black"
                    android:textSize="@dimen/font_size_medium"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_smallest"
                    android:text="@string/nim_anggota_3"
                    android:textSize="@dimen/font_size_medium"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

</LinearLayout>